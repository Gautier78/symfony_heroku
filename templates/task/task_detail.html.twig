{% extends 'base.html.twig' %}


{% block title %}{{task.name}}{% endblock %}

{% block body %}
<div class="pt-3 mx-3">
    <div class="p-3 border-light  card shadow">
        <h2 class="mx-auto">{{task.name}}</h2>
        <p class="mx-auto">
            {% if task.state == true %}
                <span class="badge badge-pill badge-success">Finish</span>
            {% else %}
                <span class="badge badge-pill badge-danger">Work in progress</span>
            {% endif %}
        </p>
        <p>
            <h3>Info : </h3>
           
            <span>{{task.user.firstName}} {{task.user.lastName}}</span>
            <span>Have to finish this task before {{task.deadline|date("m/d/Y")}}</span>

            {% if app.user %}
            <p>
                <a href="{{path('task_edit', {id:task.id})}}"><i class="far fa-edit"></i></a>
                <a href="{{path('task_delete', {id:task.id})}}"><i class="fas fa-trash"></i></a>
            </p>
            {% else %}
            <span>Connect to do something</span>
            {% endif %}

        </p>
    </div>
</div>
{% endblock %}


