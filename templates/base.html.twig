<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
            crossorigin="anonymous">

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% if app.user %}
        <a class="btn btn-primary" href="{{path('app_logout')}}">LogOut</a>
        {% else %}
        <a class="btn btn-primary" href="{{path('security_login')}}">LogIn</a>
        <a class="btn btn-primary" href="{{path('security_registration')}}">Inscription</a>
        {% endif %}
        <a class="btn btn-primary" href="{{path('user')}}">Users</a>
        <a class="btn btn-primary" href="{{path('task')}}">Tasks</a>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="https://kit.fontawesome.com/fc39d6dffa.js"
            crossorigin="anonymous"></script>
    </body>
</html>
